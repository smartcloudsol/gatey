{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "gatey/form-field",
  "version": "1.0.0",
  "title": "Form Field",
  "category": "wpsuite-gatey",
  "description": "Form Field for Gatey Authenticator - display a form field on sign-up or edit-account page.",
  "attributes": {
    "attribute": {
      "type": "string"
    },
    "custom": {
      "type": "string"
    },
    "required": {
      "type": "boolean"
    },
    "hidden": {
      "type": "boolean"
    },
    "type": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "labelHidden": {
      "type": "boolean"
    },
    "placeholder": {
      "type": "string"
    },
    "autocomplete": {
      "type": "string"
    },
    "defaultValue": {
      "type": "string"
    },
    "defaultChecked": {
      "type": "boolean"
    },
    "dialCode": {
      "type": "string"
    },
    "dialCodeList": {
      "type": "array"
    },
    "countryCode": {
      "type": "string"
    },
    "countryCodeList": {
      "type": "array"
    },
    "values": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "value": { "type": "string" },
          "label": { "type": "string" }
        }
      }
    }
  },
  "usesContext": ["gatey/custom-block/component"],
  "editorScript": "file:./index.tsx",
  "editorStyle": "file:./index.css",
  "style": "file:./index.css",
  "render": "file:./render.php",
  "supports": {
    "align": true,
    "__experimentalBorder": {
      "color": true,
      "style": true,
      "width": true,
      "radius": true
    },
    "html": true,
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true,
      "__experimentalDefaultControls": {
        "margin": false,
        "padding": false
      }
    },
    "dimensions": { "minHeight": true },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "textAlign": true,
      "__experimentalFontFamily": true,
      "__experimentalTextDecoration": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalLetterSpacing": true,
      "__experimentalTextTransform": true,
      "__experimentalWritingMode": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    },
    "color": {
      "background": true,
      "text": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    }
  }
}
